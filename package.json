{
  "name": "pg-bump",
  "version": "4.0.0",
  "license": "MIT",
  "description": "Minimalist SQL migration CLI for PostgreSQL.",
  "type": "module",
  "main": "./dist/index.js",
  "bin": {
    "pg-bump": "./dist/cli.js"
  },
  "files": [
    "dist/"
  ],
  "scripts": {
    "test": "mocha",
    "tdd": "mocha -w -R min",
    "cover": "c8 -r text -r html -r lcov mocha",
    "demo": "ts-node --esm --swc -r dotenv/config src/cli.ts",
    "prebuild": "rimraf dist",
    "build": "tsc -p tsconfig.prod.json",
    "prepare": "husky install",
    "prepack": "npm run build"
  },
  "dependencies": {
    "chalk": "^5.0.1",
    "commander": "^9.3.0",
    "postgres": "^3.2.4"
  },
  "devDependencies": {
    "@swc/core": "^1.2.205",
    "@swc/helpers": "^0.4.3",
    "@types/chai": "^4.3.1",
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.0.0",
    "c8": "^7.11.3",
    "chai": "^4.3.6",
    "dotenv": "^16.0.1",
    "eslint": "^7.32.0",
    "eslint-config-standard-with-typescript": "^21.0.1",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "mocha": "^10.0.0",
    "regenerator-runtime": "^0.13.9",
    "rimraf": "^3.0.2",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.4"
  },
  "homepage": "https://github.com/thebearingedge/pg-bump#readme",
  "bugs": {
    "url": "https://github.com/thebearingedge/pg-bump/issues"
  },
  "keywords": [
    "postgresql",
    "database",
    "schema",
    "migrations",
    "sql",
    "cli"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thebearingedge/pg-bump.git"
  },
  "author": "Tim Davis <contact@timdav.is> (https://timdav.is/)",
  "contributors": [
    {
      "name": "Tim Davis",
