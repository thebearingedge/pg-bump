{
  "name": "pg-bump",
  "version": "2.0.0",
  "description": "An opinionated, minimalist SQL migration CLI for PostgreSQL.",
  "main": "build/",
  "engines": {
    "node": ">= 6.10.3"
  },
  "files": [
    "build/"
  ],
  "bin": {
    "pg-bump": "build/cli.js"
  },
  "scripts": {
    "db:start": "docker-compose up --build -d",
    "db:stop": "docker-compose down",
    "lint": "eslint src/",
    "test": "PGBUMP_ENV=test mocha -t 5000 -r dotenv/config src/*.test.js",
    "tdd": "npm t -s -- -w -R min",
    "copy": "ncp src/ build/ --filter='^(?!.*test)'",
    "clean": "rimraf build/",
    "cover": "nyc npm t -s",
    "check": "nyc check-coverage",
    "build": "run-s -s clean copy",
    "prepublishOnly": "run-s -s build"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "run-s -s cover check"
    }
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended"
    ],
    "env": {
      "node": true,
      "es6": true
    }
  },
  "nyc": {
    "all": true,
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100,
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "src/**/*.test.js",
      "**/__test__.js",
      "**/index.js",
      "**/log.js"
    ]
  },
  "dependencies": {
    "chalk": "2.4.1",
    "fs-extra": "7.0.0",
    "pg": "7.5.0",
    "yargs": "12.0.2"
  },
  "devDependencies": {
    "chai": "4.2.0",
    "dotenv": "6.0.0",
    "eslint": "5.6.1",
    "husky": "1.1.1",
    "lint-staged": "7.3.0",
    "mocha": "5.2.0",
    "ncp": "2.0.0",
    "npm-run-all": "4.1.3",
    "nyc": "13.0.1",
    "rimraf": "2.6.2"
  },
  "peerDependencies": {
    "dotenv": "^5.0.0"
  },
  "keywords": [
    "postgresql",
    "database",
    "schema",
    "migrations",
    "sql",
    "cli"
  ],
  "author": "Tim Davis",
  "license": "MIT",
  "contributors": [
    "Tim Davis <contact@timdav.is> (https://timdav.is)"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thebearingedge/pg-bump.git"
  },
  "bugs": {
    "url": "https://github.com/thebearingedge/pg-bump/issues"
  },
  "homepage": "https://github.com/thebearingedge/pg-bump#readme"
}
