{
  "name": "pg-bump",
  "version": "3.0.0",
  "description": "An opinionated, minimalist SQL migration CLI for PostgreSQL.",
  "main": "index.js",
  "engines": {
    "node": ">= 8.3.0"
  },
  "files": [
    "index.js",
    "lib/*.js",
    "!**/*test*",
    "lib/__template__.sql"
  ],
  "bin": {
    "pg-bump": "lib/cli.js"
  },
  "scripts": {
    "db:start": "docker-compose up --build -d",
    "db:stop": "docker-compose down",
    "test": "PGBUMP_ENV=test mocha -t 5000 -r dotenv/config lib/*.test.js",
    "tdd": "npm t -s -- -w -R min",
    "cover": "nyc npm t -s",
    "check": "nyc check-coverage"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "run-s -s cover check"
    }
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2018
    },
    "env": {
      "node": true,
      "es6": true
    },
    "overrides": [
      {
        "files": [
          "**/*.test.js",
          "**/__test__.js"
        ],
        "env": {
          "mocha": true
        }
      }
    ]
  },
  "nyc": {
    "all": true,
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100,
    "reporter": [
      "lcov",
      "html",
      "text-summary"
    ],
    "include": [
      "lib/**/*.js"
    ],
    "exclude": [
      "lib/**/*.test.js",
      "**/__test__.js",
      "**/index.js",
      "**/log.js"
    ]
  },
  "dependencies": {
    "chalk": "4.1.0",
    "fs-extra": "9.0.1",
    "pg": "8.3.2",
    "yargs": "15.4.1"
  },
  "devDependencies": {
    "chai": "4.2.0",
    "dotenv": "8.2.0",
    "eslint": "7.7.0",
    "husky": "4.2.5",
    "lint-staged": "10.2.11",
    "mocha": "8.1.1",
    "npm-run-all": "4.1.5",
    "nyc": "15.1.0"
  },
  "keywords": [
    "postgresql",
    "database",
    "schema",
    "migrations",
    "sql",
    "cli"
  ],
  "author": "Tim Davis",
  "license": "MIT",
  "contributors": [
    "Tim Davis <contact@timdav.is> (https://timdav.is)"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thebearingedge/pg-bump.git"
  },
  "bugs": {
    "url": "https://github.com/thebearingedge/pg-bump/issues"
  },
  "homepage": "https://github.com/thebearingedge/pg-bump#readme"
}
