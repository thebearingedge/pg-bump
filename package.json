{
  "name": "pg-bump",
  "version": "0.0.1",
  "description": "A Node.js CLI for PostgreSQL migrations.",
  "main": "dist/",
  "engines": {
    "node": ">= 6.10.3"
  },
  "files": [
    "dist/"
  ],
  "bin": {
    "pg-bump": "dist/cli.js"
  },
  "scripts": {
    "lint": "eslint src/",
    "test": "PGBUMP_ENV=test mocha src/*.test.js",
    "tdd": "npm t -s -- -w -R min",
    "copy": "ncp src/ dist/ --filter='^(?!.*test)'",
    "clean": "rimraf dist/",
    "cover": "nyc npm t -s",
    "check": "nyc check-coverage",
    "build": "run-s -s clean copy",
    "precommit": "run-s -s lint",
    "prepush": "run-s -s cover check"
  },
  "dependencies": {
    "chalk": "1.1.3",
    "fs-extra": "3.0.1",
    "yargs": "8.0.1"
  },
  "devDependencies": {
    "chai": "3.5.0",
    "dotenv": "4.0.0",
    "eslint": "3.19.0",
    "husky": "0.13.3",
    "mocha": "3.4.0",
    "ncp": "2.0.0",
    "npm-run-all": "4.0.2",
    "nyc": "10.3.2",
    "pg": "6.1.5",
    "rimraf": "2.6.1"
  },
  "peerDependencies": {
    "pg": "6.x"
  },
  "keywords": [
    "postgresql",
    "database",
    "schema",
    "migrations"
  ],
  "author": "Tim Davis",
  "license": "MIT",
  "contributors": [
    "Tim Davis <contact@timdav.is> (https://timdav.is)"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thebearingedge/pg-bump.git"
  },
  "bugs": {
    "url": "https://github.com/thebearingedge/pg-bump/issues"
  },
  "homepage": "https://github.com/thebearingedge/pg-bump#readme"
}
